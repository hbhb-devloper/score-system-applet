/**app.wxss**/
page{
  background: #f8f8f8;
}
page,view{
  box-sizing: border-box;
  transition: all .2s ease-in-out;
}
.login_loading{
  position: absolute;
  left: 0;
  right: 0;
  width:100%;
  height:100%;
  background: #fff;
  z-index: 10;
}
view::after{
  width:0;
}
page button{
  min-height: unset!important;
  padding: 0;
}
radio{
  opacity: 0;
}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height:100%;
  background: rgba(0,0,0,.2);
}
.header{
  position: relative;
  width:100%;
  height:276rpx;
  line-height: 276rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  background: #3574FA;
  color: #fff;
}
.header>image,.header .header_text{
  position: absolute;
  left: 0;
  top:0;
  width:100%;
  height:100%;
}
.header>image{
  top:-48rpx;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
.vote_oper button{
  flex:none;
  -webkit-flex:none;
  margin:0 0 0 20rpx!important;
  border-radius: 100rpx;
  width:150rpx!important;
  line-height: 50rpx;
  font-size: 24rpx;
  letter-spacing: 10rpx;
}
.btn_allow{
  background: #3A77F7;
  color:#fff;
}
.btn_disabled{
  background: #DBDBDB!important;
  color:#fff!important;
}