/* pages/mine/mine.wxss */
page{
  color:#666;
}
.setting_box{
  text-align: right;
}
.setting_box image{
  margin:40rpx 40rpx 0 auto;
  width:60rpx;
  height:60rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 220rpx;
  height: 220rpx;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 50%;
  background: #3574FA;
  box-shadow:0px 9px 17px 0px rgba(0,0,0,0.2);
}
.userinfo-nickname {
  margin:52rpx auto 60rpx;
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
}
.myVote{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  padding:40rpx;
  background: #fff;
}
.vote_icon{
  width:48rpx;
  height:58rpx;
  margin:0 36rpx 0 20rpx;
}
.myVote text{
  font-size: 30rpx;
}
.arrow{
  justify-self: flex-end;
  -webkit-justify-self: flex-end;
  width:22rpx;
  height:40rpx;
}
.diy_tabbar{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  display: -webkit-flex;
  justify-content: space-around;
  -webkit-justify-content: space-around;
  width:100%;
  padding:16rpx 0;
  box-shadow:1px 3px 10px 1px rgba(153,153,153,0.5);
}
.diy_tabbar image{
  height:52rpx;
  width:52rpx;
}
.diy_tabbar .dt_text{
  text-align: center;
  font-size: 24rpx;
  line-height: 40rpx;
  color:#B4B4B4;
}
.diy_tabbar .dt_text.active{
  color:#3574FA;
}