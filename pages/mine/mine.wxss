/* pages/mine/mine.wxss */
page{
  color:#666;
}
.setting_box{
  text-align: right;
}
.setting_box image{
  margin:40rpx 40rpx 0 auto;
  width:60rpx;
  height:60rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 220rpx;
  height: 220rpx;
  margin: 0 auto;
  overflow: hidden;
  border-radius: 50%;
  background: #3574FA;
  box-shadow:0px 9px 17px 0px rgba(0,0,0,0.2);
}
.userinfo-nickname {
  margin:52rpx auto 60rpx;
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
}
.myVote{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
  padding:20rpx;
  background: #fff;
}
.vote_icon{
  width:48rpx;
  height:58rpx;
  margin:0 36rpx 0 10rpx;
}
.myVote text{
  font-size: 30rpx;
}
.arrow{
  justify-self: flex-end;
  -webkit-justify-self: flex-end;
  width:22rpx;
  height:40rpx;
}