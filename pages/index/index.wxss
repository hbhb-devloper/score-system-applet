/**index.wxss**/
.vote_content{
  margin:0 18rpx 180rpx;
}
.vote_top{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
  width:100%;
  margin:50rpx 0 36rpx;
}
.vote_topitem{
  flex:none;
  -webkit-flex:none;
}
.vote_toptitle{
  padding:14rpx 20rpx;
  font-size: 20rpx;
  color: #666;
  border-radius: 8rpx;
  border: 4rpx solid #3574FA;
  box-shadow: 0px 4px 8px 0px rgba(53,116,250,0.18);
}
.vote_toppoint{
  margin:20rpx 0 0;
  line-height: 50rpx;
  font-size: 22rpx;
  border-radius: 100rpx;
  background: #3574FA;
  color: #fff;
  text-align: center;
  box-shadow:0px 4px 8px 0px rgba(53,116,250,0.18);
}
.vote_sectionitem{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  -webkit-justify-content: space-between;
}
.vote_depart,.vote_score{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  -webkit-justify-content: center;
  align-items: center;
  -webkit-align-items: center;
  border-radius: 12rpx;
  background: #fff;
  padding:22rpx;
  width:76rpx;
}
.vote_depart{
  color: #3574FA;
  font-size: 26rpx;
}
.vote_score{
  color: #3371F4;
  font-size: 28rpx;
}
.vote_area{
  display: flex;
  display: -webkit-flex;
  flex:0 0 530rpx;
  -webkit-flex: 0 0 530rpx;
  justify-content: space-around;
  -webkit-justify-content: space-around;
}
.vote_area radio-group{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  -webkit-flex-direction: column;
}
.vote_area radio-group label{
  display: flex;
  display: -webkit-flex;
  align-items: center;
  -webkit-align-items: center;
}
label>view{
  display: inline-block;
}
label .vote_radio,label .vote_radio radio{
  width:24rpx;
  height:24rpx;
  border-radius: 50%;
  border:2rpx solid #B6CDFD;
  box-shadow:0px 1px 3px 0px #C9DBFF;
}
label .vote_radio{
  margin:0 20rpx 0 0;
  opacity:0.68;
}
label[aria-checked="true"] .vote_radio{
  background: #B6CDFD;
}
label .vote_radio+view{
  font-size: 30rpx;
  line-height: 44rpx;
}
.vote_oper{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  display: -webkit-flex;
  justify-content: flex-end;
  -webkit-justify-content: flex-end;
  padding:38rpx 42rpx;
  width:100%;
  background: #fff;
  box-shadow:1px 3px 10px 1px #999;
}
.vote_oper .vote_user{
  justify-self: flex-start;
  -webkit-justify-self: flex-start;
  height:50rpx;
  width:50rpx;
  margin:0 0 0 18rpx;
}